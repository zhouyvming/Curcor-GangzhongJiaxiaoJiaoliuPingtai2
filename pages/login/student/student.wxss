/* pages/login/student/student.wxss */
.container {
  padding: 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  margin-top: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

input {
  height: 88rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
}

.login-btn {
  margin-top: 80rpx;
  background: #4CAF50;
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
}