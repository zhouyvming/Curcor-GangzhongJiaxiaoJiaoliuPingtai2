/* pages/forum/forum.wxss */
.container {
  padding: 20rpx;
  background: #f6f6f6;
}

.post-list {
  width: 100%;
}

.post-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

.post-info {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.post-author {
  margin-right: 20rpx;
}

.post-time {
  margin-right: 20rpx;
}

.new-post-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #1AAD19;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}