<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="login-section">
    <view class="login-title">选择登录身份</view>
    <view class="login-form">
      <view class="login-buttons">
        <button 
          wx:for="{{loginButtons}}" 
          wx:key="type"
          class="login-btn {{selectedType === item.type ? 'selected' : ''}}"
          bindtap="onTypeSelect"
          data-type="{{item.type}}">
          {{item.text}}
        </button>
      </view>
      <view class="form-item">
        <input 
          type="text" 
          placeholder="用户名/学号/手机号"
          value="{{account}}"
          bindinput="onAccountInput"
        />
      </view>
      <view class="form-item">
        <input 
          type="password" 
          placeholder="密码"
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      <button class="submit-btn" bindtap="onLogin">登录</button>
    </view>
  </view>
  <view class="login-options">
    <view class="option-item">
      <checkbox value="{{rememberPassword}}" bindtap="onRememberPasswordChange">记住密码</checkbox>
    </view>
    <view class="option-item">
      <checkbox value="{{autoLogin}}" bindtap="onAutoLoginChange">自动登录</checkbox>
    </view>
  </view>
</view>