/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #ffffff;
  padding-top: 0;
  display: block;
}

/* 用户信息 */
.profile-header {
  width: 100%;
  background: #fff;
  padding: 70rpx 50rpx;
}

.profile-content {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  background: #F5F5F5;
}

.login-text {
  font-size: 30rpx;
  color: #fff;
  background: #acc9fc;
  padding: 12rpx 40rpx;
  border-radius: 20rpx;
}

/* 点击效果 */
.login-text:active {
  opacity: 0.8;
}

/* 数据统计 */
.stats-section {
  width: 100%;
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  margin-top: 2rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

/* 功能菜单 */
.menu-list {
  width: 100%;
  background: #fff;
  margin-top: 16rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #EBEDF0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-left .iconfont {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #4086F4;
}

.menu-left text:last-child {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #CCCCCC;
  border-right: 2rpx solid #CCCCCC;
  transform: rotate(45deg);
}